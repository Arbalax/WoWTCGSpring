<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>
        <property name="hibernate.connection.isolation">
            2
        </property>
        <!-- Assume testHibernate is the database name -->
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/maindata?serverTimezone=Europe/Moscow
        </property>
        <property name="hibernate.connection.username">
            root
        </property>
        <property name="hibernate.connection.password">
            nedved
        </property>
        <property name="show_sql">true</property>

        <mapping class="ru.wowtcgdatabase.model.Card" />
        <mapping class="ru.wowtcgdatabase.model.MyCollection" />

    </session-factory>
</hibernate-configuration>